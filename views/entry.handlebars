{{!-- {{>header}} --}}

<header>
    <h2><a href="/">
        Travel Tracker</a></h2>
    <nav>
      <ul>
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/logout">Logout</a>
        </li>
        <li>
          <a href="/mytrips">Trips</a>
        </li>
      </ul>
    </nav>
  </header>


<div class="container">

<div class="entry-main">
     <h4 id="trip-header"><strong>{{trip.tripTitle}}</strong></h4>
<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample"
    aria-expanded="false" aria-controls="collapseExample">
    Add An Entry
</button>
</div>
<br><br>
<div class="collapse" id="collapseExample">
    <div class="card card-body">
        <form method="POST" action="/addentry" enctype="multipart/form-data">
            <div class="form-group">
                <label for="triptitle">Entry Title</label>
                <input type="text" name="entrytitle" class="form-control " placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Trip Entry</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="entrynote"></textarea>
            </div>
            <div class="form-group">
                <label for="picture">Add a photo for this entry</label>
                <input type="file" name="picture" class="form-control-file" id="exampleFormControlFile1">
            </div>
            <button type="submit" class="btn btn-primary">Submit Your Entry</button>

        </form>
    </div>
</div>
<section class="entries">
<h5 class="card-header" id="entry-name">Your Trip Entries</h5>
{{#each entry}}
<div class="card" id="entry-card">
    <div class="card-body" id="entry-body">
        <strong class="card-title">{{entryTitle}} - <span><small>{{createdAt}}</small></span></strong>
        <hr>
        <img src="{{picture}}" id="entry-img" class="card-img-top">
        <hr>
        <p class="card-text">{{entryNote}}</p>
        <hr>
        <i class="far fa-edit fa-lg" id="edit-button"></i><span>
        <i class="far fa-trash-alt fa-lg" id="delete-button"></i></span>
    </div>
</div>
<br>


{{/each}}
</section>

<br>
</div>
{{!-- {{> footer }} --}}