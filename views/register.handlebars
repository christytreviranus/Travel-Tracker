{{> header }}

<div class="container">


    <h1>{{title}}</h1>
    <hr>
    {{#if errors}}
    {{#each errors}}
    <div class="alert alert-danger">
        {{this.msg}}
    </div>
    {{/each}}
    {{/if}}

    <form method="POST" action="/register">
        <div class="form-group">
            <label for="exampleInputEmail1">Username</label>
            <input type="text" name="username" class="form-control" placeholder="Username">
            <small>Username must be between 4-15 characters long</small>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control" placeholder="example@email.com">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Password">
            <small>Password must include one lowercase character, one uppercase character, a number, and a special
                character</small>
        </div>
        <div class="form-group">
            <label for="passwordMatch">Re-Enter Password</label>
            <input type="password" name="passwordMatch" class="form-control" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>
{{!-- {{> footer-end }} --}}